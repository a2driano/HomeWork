<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                tools:context="ua.work.home.vrgcources.task.lesson1.view.fragment.FragmentDetail">

    <TextView
        android:id="@+id/text_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_header_label"/>

    <EditText
        android:id="@+id/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_header_label"
        android:maxLength="18"
        android:maxLines="1"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_header"
        android:text="@string/text_description_label"/>

    <EditText
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_description_label"/>

    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="14dp"
        android:background="@drawable/button_round_background"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_edit"/>

    <ImageButton
        android:id="@+id/button_save"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="14dp"
        android:background="@drawable/button_round_background"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_save"/>

</RelativeLayout>
